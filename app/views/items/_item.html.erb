<div class="col-sm-3 item">
    <div class="pull-left">

      <h1><%= item.name %></h1>
      <p>price: <%= item.price %></p>
      <p>quantity: <%= item.quantity %></p>
      <p>sold: <%= item.sold unless nil %></p>
    </div>
    <div class="pull-right">
      <% sizes(item).each do |size| %>
        <%= form_for CartItem.create(item: item, cart: @cart) do |f| %>
          <button><%= size.name %></button>
        <% end %>
      <% end %>
    </div>
</div>